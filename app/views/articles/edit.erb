<h1>Edit A New Article</h1>

<form method="POST" action="/articles/<%= @article.id %>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <p><label for="title" name="title">Title:</label></p>
  <p><input type="text" name="title" value="<%= @article.title %>"><p>
  <p><label for="content" name="content">Content:</label></p>
  <p><input type="text" name="content" value="<%= @article.content %>"></p>
  <p><input type="submit" id="submit">
</form>
